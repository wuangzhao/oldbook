<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.fd.dao.UserDao">
    <insert id="insert" parameterType="org.fd.entity.UserEntity" keyProperty="user_id" useGeneratedKeys="true">
        INSERT INTO user(user_password, user_tel, user_email)
        VALUES (${userPassword}, ${userTel}, ${userEmail})
    </insert>
    <update id="update" parameterType="org.fd.entity.UserEntity" keyProperty="user_id">
        UPDATE user
        SET user_password=${userPassword}, user_email=${userEmail}, user_tel=${userTel}
        WHERE user_id = ${userId}
    </update>

    <select id="queryUserById" resultType="org.fd.entity.UserEntity" parameterType="java.lang.Integer">
        select user_id,user_name,user_password,user_email,user_create_time
        FROM user WHERE user_id = #{userId}
    </select>


    <select id="queryUserByTel" resultType="org.fd.entity.UserEntity" parameterType="java.lang.String">
        select user_id,user_name,user_password,user_email,user_create_time
        FROM user WHERE user_name = #{userName}
    </select>
    
    <select id="queryUserByEmail" resultType="org.fd.entity.UserEntity" parameterType="java.lang.String">
        select user_id,user_name,user_password,user_email,user_create_time
        FROM user WHERE user_email = #{userEmail}
    </select>

</mapper>